<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawHorizontalTrack="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/section_header_npr"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:rotation="-90"
            android:text="NPR"
            android:textDirection="firstStrong"
            android:textSize="16sp" />


        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/OpaqueLightBlue"
            card_view:cardElevation="3dp"
            card_view:cardUseCompatPadding="true"
            card_view:theme="@style/Base.Theme.AppCompat.Light">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/user_twitter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp"
                        android:letterSpacing="0.1"
                        android:text="user name"
                        android:textColor="@color/DarkBlue"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/url_twitter"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_vertical"
                        android:src="@android:drawable/sym_def_app_icon" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/name_twitter"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:letterSpacing="0.1"
                            android:text="tweet name"
                            android:textColor="@color/DarkBlue"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/date_twitter"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.2"
                            android:alpha="0.5"
                            android:gravity="end"
                            android:letterSpacing="0.1"
                            android:text="10/21/2016"
                            android:textColor="@color/LightBlue"
                            android:textSize="10dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tweet_twitter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.1"
                        android:text="sa djsk a jdkjlahfkjh dsakjfkdjsahfkjldsah fjdaslhlf kjdhsajkf hldkjsa hflja"
                        android:textColor="@color/DarkBlue" />

                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>