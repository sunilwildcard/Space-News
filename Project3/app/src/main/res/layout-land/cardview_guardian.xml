<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/section_header_guardian"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Guardian"
            android:rotation="-90"
            android:textDirection="firstStrong"
            android:textSize="16sp" />

        <TextView
            android:layout_width="4px"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:alpha="0.2"
            android:background="@color/DarkBlue"
            android:elevation="1dp" />

        <android.support.v7.widget.CardView
            android:layout_width="700px"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="#ffffff"
            card_view:cardUseCompatPadding="true"
            card_view:theme="@style/Base.Theme.AppCompat.Light">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nasa_explanation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="This is an explanation This is is an explanation This is an his is an explanation This is is an explanation This is an explanation" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="4px"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:alpha="0.2"
                    android:background="@color/DarkBlue"
                    android:elevation="1dp" />

                <TextView
                    android:id="@+id/nasa_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:gravity="left"
                    android:padding="5dp"
                    android:text="The molecular-decay detonator"
                    android:textColor="#ffffff"
                    android:textSize="15dp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/nasa_image"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/guardian_default_image" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="10dp"
                        android:background="#00000000"
                        android:src="@mipmap/guardian_logo" />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>