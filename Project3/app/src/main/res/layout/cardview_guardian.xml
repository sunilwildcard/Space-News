<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/section_header_guardian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:gravity="center_horizontal"
        android:padding="6dp"
        android:text=""
        android:textSize="16sp" />


    <android.support.v7.widget.CardView
        android:id="@+id/cardview_guardian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/OpaqueDarkBlue"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true"
        card_view:theme="@style/Base.Theme.AppCompat.Light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_text_guardian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:gravity="left"
                android:padding="5dp"
                android:text="The Guardian Title"
                android:textColor="#ffffff"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image_child_large"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:adjustViewBounds="true"
                        android:elevation="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/guardian_default_image"></ImageView>

                    <ImageView
                        android:id="@+id/image_child_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="10dp"
                        android:elevation="10dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/guardian_logo" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8">

                        <TextView
                            android:id="@+id/paragraph_text_guardian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_margin="10dp"
                            android:letterSpacing="0.1"
                            android:text="@string/paragraph"
                            android:textColor="@color/DarkBlue"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_layout_guardian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_gravity="center_vertical"-->
                        <!--android:layout_marginLeft="10dp"-->
                        <!--android:text="0"-->
                        <!--android:textColor="@color/DarkBlue" />-->

                        <ImageButton
                            android:id="@+id/guardian_share_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:alpha="0.5"
                            android:src="@drawable/ic_menu_share" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:alpha="0.5"
                            android:src="@mipmap/heart" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/bufferInner"
                    android:layout_width="match_parent"
                    android:layout_height="4px"
                    android:layout_gravity="center"
                    android:alpha=".3"
                    android:background="@color/DarkBlue" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!--<TextView-->
    <!--android:id="@+id/buffer"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="4px"-->
    <!--android:layout_gravity="center"-->
    <!--android:layout_margin="10dp"-->
    <!--android:alpha=".3"-->
    <!--android:background="@color/DarkBlue" />-->

</LinearLayout>